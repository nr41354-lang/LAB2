import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
      Scanner in= new Scanner(System.in);
        System.out.print("N: ");
        int N = in.nextInt();
        long h =0;
        int p=1;
        for(int i=0; i<N; i++){
            h=h+1*p;
            p=p*3;
        }
        System.out.print(h);
    }
}
